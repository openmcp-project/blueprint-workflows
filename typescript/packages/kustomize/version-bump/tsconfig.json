{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "coverage",
    "dist",
    "./node_modules",
    "__test__",
    "./coverage",
    "./__test__",
    "./dist/**/*"
  ],
  "references": [
    {
      "path": "../../shared"
    }
  ]
}
