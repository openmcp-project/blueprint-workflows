{
  "name": "shared",
  "description": "Typescript shared function package",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/openmcp-project/blueprint-workflows",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmcp-project/blueprint-workflows"
  },
  "bugs": {
    "url": "https://github.com/openmcp-project/blueprint-workflows/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write ./src ./__test__",
    "format:check": "npx prettier --check ./src ./__test__",
    "lint": "npx eslint . -c ../../../../.github/linters/.eslintrc.yml --resolve-plugins-relative-to path::./",
    "local-action": "npx local-action . src/main.ts .env",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "Apache-2.0",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "helm-ts": "^0.1.5",
    "js-yaml": "^4.1.0",
    "loglevel": "^1.9.2",
    "node-helm": "^0.1.0",
    "semver": "^7.6.3",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@github/local-action": "^6.0.0",
    "@jest/globals": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vercel/ncc": "^0.38.2",
    "eslint": "^9.0.0",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.0.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts"
}
